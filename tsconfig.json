{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/test/*": ["test/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "hooks/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "*.ts",
    "*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "command-palette-context-final.ts",
    "command-palette-context-new-fixed.ts",
    "hooks/command-palette-context-final.ts",
    "hooks/command-palette-context-new.ts",
    "hooks/command-palette-context-fixed.ts",
    "hooks/command-palette-context-broken.ts",
    "hooks/command-palette-context.ts",
    "*-fixed.ts",
    "*-fixed-*.ts",
    "analytics-route-*.ts",
    "llm-chat-route-*.ts",
    "personas-route-*.ts",
    "goals-route-*.ts",
    "usage-route-*.ts",
    "package-clean*.json",
    "tsconfig-minimal*.json",
    "test-minimal*.tsx",
    "test.tsx"
  ]
}