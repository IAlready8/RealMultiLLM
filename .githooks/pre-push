#!/bin/bash
# Pre-push hook - FULL validation before push

set -e

echo "ğŸš€ Running pre-push validation..."
echo "================================"

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m'

FAILED=0

print_status() {
    if [ $1 -eq 0 ]; then
        echo -e "${GREEN}âœ“ $2${NC}"
    else
        echo -e "${RED}âœ— $2${NC}"
        FAILED=1
    fi
}

BRANCH=$(git rev-parse --abbrev-ref HEAD)
echo "ğŸ“Œ Branch: $BRANCH"
echo ""

echo "ğŸ” TypeScript type check..."
npm run type-check
print_status $? "Type check"

echo ""
echo "ğŸ” ESLint check..."
npm run lint -- --max-warnings 200
print_status $? "Lint (max 200 warnings)"

echo ""
echo "ğŸ§ª Running FULL test suite..."
npm run test:run
print_status $? "All tests"

echo ""
echo "ğŸ—ï¸  Production build check..."
npm run build
print_status $? "Build"

echo ""
echo "================================"

if [ $FAILED -eq 1 ]; then
    echo -e "${RED}âŒ Pre-push validation FAILED!${NC}"
    echo "Your code will NOT pass CI. Fix issues before pushing."
    echo "To bypass: git push --no-verify"
    exit 1
else
    echo -e "${GREEN}âœ… All pre-push checks PASSED! Safe to push.${NC}"
    exit 0
fi
